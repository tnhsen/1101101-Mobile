<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Lab9.DetailPage">
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Frame>
                <StackLayout>
                    <Image Source="{Binding Image}" HeightRequest="200" />
                    <Label Text="{Binding Title}" FontSize="Large" FontAttributes="Bold" Margin="0,10,0,0" />
                    <Label Text="{Binding Price}" FontSize="Medium" Margin="0,5,0,20" />
                    <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
                        <Button Text="Back" Clicked="Back" />
                        <Button Text="Add to cart" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>